{% extends 'base.html.twig' %}

{% block title %}Welcome to Todos!
{% endblock %}

{% block body %}

	<div class='todoBody'>
		<div class='todoContainer'>
			{% for todo in data %}
				<div class='todoCard'>
					<h1>Title:
						{{todo.title}}</h1>
					<p>Description:
						{{todo.description}}</p>
					<p>Created At:
						{{todo.created_at|date()}}</p>
					<a class='actionBtn' href="{{path('getOne', {'id':todo.id})}}">Edit</a>
					<a class='actionBtn' href="{{path('deleteTodo', {'id':todo.id})}}">Delete</a>
				</div>
			{% endfor %}
		</div>
		<div>
			<div class='addTodo'>
				<h1>Add your Todo</h1>
			</div>
			<form class='form' method="post">
				<div>
					<label for="">Title</label>
					<input type="text" placeholder="Task title" name="title"/>
				</div>

				<div>
					<label for="">Description</label>
					<input type="text" name="description" placeholder="Task description"/>
					<button class='addBtn' type="submit">Add</button>
					<button><a href="{{path('app_web')}}">Back</a></button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
